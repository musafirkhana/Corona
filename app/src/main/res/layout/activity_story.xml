<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MapActivity"
    >

    <RelativeLayout
        android:id="@+id/top_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/header_color"
        >

        <RelativeLayout android:id="@+id/left_relative"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:onClick="BACK"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_back">

            </ImageView>



        </RelativeLayout>

        <TextView android:id="@+id/topbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BAF CORONA INFO"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold|normal" />

    </RelativeLayout>




   <LinearLayout
       android:layout_width="match_parent"
       android:layout_below="@+id/top_linear"
       android:orientation="vertical"
       android:padding="15dp"
       android:layout_height="match_parent">
       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center|left"
           android:textStyle="bold"
           android:layout_marginBottom="10dp"
           android:textSize="20sp"
           android:text="@string/success_story_head"
           android:src="@mipmap/ic_launcher" />
       <ScrollView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <com.baf.bafcoronainfo.util.JustifiedTextView
               android:id="@+id/success_story"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:gravity="center"
               android:textSize="14sp"
               android:text="@string/success_story"
               android:src="@mipmap/ic_launcher" />
       </ScrollView>


   </LinearLayout>

</RelativeLayout>