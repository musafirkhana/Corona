<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cmh_color">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/re_logo"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:src="@drawable/logo" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAF CORONA INFO"
        android:layout_below="@+id/re_logo"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotobold"
        android:textColor="@color/google_white"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
         />
</RelativeLayout>







    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered By"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:fontFamily="@font/robotobold"
            android:gravity="center"
            android:textColor="@color/google_white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directorate of Cyber Warfare &amp; Information Technology"
            android:textColor="@color/google_white"
            android:textSize="16sp"
            android:paddingRight="20sp"
            android:fontFamily="@font/robotolight"
            android:paddingLeft="20sp"
            android:paddingBottom="40dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
             />



    </LinearLayout>


</RelativeLayout>