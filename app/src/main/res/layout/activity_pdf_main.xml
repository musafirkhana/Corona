<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/top_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/color_light_blue_700"
        >

        <RelativeLayout android:id="@+id/left_relative"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:onClick="BACK"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_back">

            </ImageView>



        </RelativeLayout>

        <TextView android:id="@+id/topbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BAF CORONA INFO"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold|normal" />

    </RelativeLayout>


    <View android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_below="@+id/top_linear"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:background="@color/white"
        android:layout_above="@+id/excercise_scroll"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#c2c2c2" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:focusable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:onClick="PDF1"
                            android:background="@color/app_background"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/imageview_1"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_pdf" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/imageview_1"
                                android:layout_marginLeft="14dp">

                                <TextView
                                    android:id="@+id/ptv_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="@string/corona_direction_head_1"
                                    android:textColor="@color/fontBlack"
                                    android:textSize="14sp"
                                    android:textStyle="normal" />

                            </RelativeLayout>


                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>




                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:focusable="true">
                        <RelativeLayout
                            android:id="@+id/mll_home"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:onClick="PDF2"
                            android:background="@color/app_background"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/imageview_2"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_pdf" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/imageview_2"
                                android:layout_marginLeft="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:text="@string/corona_direction_head_2"
                                    android:textColor="@color/fontBlack"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </RelativeLayout>


                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:focusable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:onClick="PDF3"
                            android:background="@color/app_background"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/imageview_3"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_pdf" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/imageview_3"
                                android:layout_marginLeft="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/corona_direction_head_3"
                                    android:textStyle="normal"
                                    android:layout_alignParentLeft="true"
                                    android:textColor="@color/fontBlack"
                                    android:textSize="14dp"
                                    />

                            </RelativeLayout>


                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:focusable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:onClick="PDF4"
                            android:background="@color/app_background"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/imageview_4"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_pdf" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/imageview_4"
                                android:layout_marginLeft="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/corona_direction_head_4"
                                    android:textStyle="normal"
                                    android:layout_alignParentLeft="true"
                                    android:textColor="@color/fontBlack"
                                    android:textSize="14dp"
                                    />

                            </RelativeLayout>


                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        app:cardElevation="2dp"
                        android:clickable="true"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:focusable="true">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:onClick="PDF5"
                            android:background="@color/app_background"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/imageview_5"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_pdf" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginRight="10dp"
                                android:layout_toRightOf="@+id/imageview_5"
                                android:layout_marginLeft="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/corona_direction_head_5"
                                    android:textStyle="normal"
                                    android:layout_alignParentLeft="true"
                                    android:textColor="@color/fontBlack"
                                    android:textSize="14dp"
                                    />

                            </RelativeLayout>


                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>



    </LinearLayout>


</RelativeLayout>