<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:orientation="vertical">



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:checkable="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"

            app:cardElevation="2dp"
            android:clickable="true"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:focusable="true">
            <RelativeLayout
                android:id="@+id/mll_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@color/app_background"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageview_1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_contact" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/imageview_1"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/tv_appt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CMH Corona Cell"
                        android:fontFamily="@font/robotolight"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/fontBlack"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/tv_mobileno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01769975230"
                        android:fontFamily="@font/robotolight"
                        android:layout_below="@+id/tv_appt_name"
                        android:textColor="@color/fontBlack"
                        android:textSize="14sp"
                        />
                </RelativeLayout>

                <RelativeLayout android:id="@+id/call_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rounded_cmh"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Call Now"
                        android:padding="7dp"
                        android:fontFamily="@font/robotobold"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>









</LinearLayout>