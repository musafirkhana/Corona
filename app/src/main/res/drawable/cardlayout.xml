<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90"
                android:endColor="@color/gray" android:startColor="#ccc" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="1.5dp"
        android:top="0dp"
        android:bottom="4.5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPurple_A400"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>